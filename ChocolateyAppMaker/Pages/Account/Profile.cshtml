@page
@model ChocolateyAppMaker.Pages.Account.ProfileModel
@{
    ViewData["Title"] = "USER_PROFILE";
}

<div class="max-w-4xl mx-auto space-y-8">

    <!-- HEADER -->
    <div class="flex items-center gap-4 border-b border-zinc-800 pb-6">
        <div class="w-16 h-16 bg-zinc-900 rounded-full flex items-center justify-center border border-zinc-700 text-emerald-500 text-2xl shadow-[0_0_15px_rgba(16,185,129,0.2)]">
            <i class="bi bi-person-fill"></i>
        </div>
        <div>
            <h2 class="text-2xl font-bold text-zinc-100 tracking-wide">ACCOUNT_SETTINGS</h2>
            <p class="text-zinc-500 text-xs font-mono">USER: <span class="text-emerald-400">@Model.CurrentUserName</span></p>
        </div>
    </div>

    <!-- NOTIFICATIONS -->
    @if (TempData["Message"] != null)
    {
        <div class="bg-emerald-900/10 border border-emerald-500/30 text-emerald-400 px-4 py-3 rounded text-xs font-mono flex items-center gap-2">
            <i class="bi bi-check-circle-fill"></i> @TempData["Message"]
        </div>
    }
    @if (!ModelState.IsValid)
    {
        <div class="bg-red-900/10 border border-red-500/30 text-red-400 px-4 py-3 rounded text-xs font-mono">
            <div asp-validation-summary="All" class="mb-0"></div>
        </div>
    }

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">

        <!-- CHANGE LOGIN -->
        <div class="bg-zinc-900 border border-zinc-800 rounded p-6 shadow-lg">
            <h3 class="text-emerald-500 font-bold text-xs uppercase tracking-widest mb-6 flex items-center gap-2">
                <i class="bi bi-person-gear"></i> Identity_Configuration
            </h3>

            <form method="post" asp-page-handler="ChangeName" class="space-y-4">
                <div>
                    <label class="block text-zinc-500 text-[10px] uppercase tracking-widest mb-1">Current Handle</label>
                    <input type="text" class="w-full bg-zinc-950 border border-zinc-800 text-zinc-400 px-3 py-2 text-xs font-mono cursor-not-allowed" value="@Model.CurrentUserName" readonly />
                </div>
                <div>
                    <label asp-for="Input.NewUserName" class="block text-zinc-500 text-[10px] uppercase tracking-widest mb-1">New Handle</label>
                    <input asp-for="Input.NewUserName" class="w-full bg-zinc-950 border border-zinc-700 text-emerald-100 px-3 py-2 text-xs font-mono focus:border-emerald-500 focus:ring-0 transition" placeholder="Enter new username" />
                    <span asp-validation-for="Input.NewUserName" class="text-red-500 text-[10px]"></span>
                </div>
                <div class="pt-2">
                    <button type="submit" class="w-full bg-zinc-800 hover:bg-zinc-700 text-zinc-200 border border-zinc-600 px-4 py-2 rounded text-xs font-bold uppercase transition">
                        Update Identity
                    </button>
                </div>
            </form>
        </div>

        <!-- CHANGE PASSWORD -->
        <div class="bg-zinc-900 border border-zinc-800 rounded p-6 shadow-lg relative overflow-hidden">
            <div class="absolute top-0 right-0 p-4 opacity-5 text-6xl text-red-500 pointer-events-none"><i class="bi bi-shield-lock"></i></div>

            <h3 class="text-red-500 font-bold text-xs uppercase tracking-widest mb-6 flex items-center gap-2">
                <i class="bi bi-shield-lock"></i> Security_Access
            </h3>

            <form method="post" asp-page-handler="ChangePassword" class="space-y-4">
                <div>
                    <label asp-for="Input.OldPassword" class="block text-zinc-500 text-[10px] uppercase tracking-widest mb-1">Current Key</label>
                    <input asp-for="Input.OldPassword" type="password" class="w-full bg-zinc-950 border border-zinc-700 text-emerald-100 px-3 py-2 text-xs font-mono focus:border-red-500 focus:ring-0 transition" placeholder="••••••••" />
                </div>
                <div>
                    <label asp-for="Input.NewPassword" class="block text-zinc-500 text-[10px] uppercase tracking-widest mb-1">New Key</label>
                    <input asp-for="Input.NewPassword" type="password" class="w-full bg-zinc-950 border border-zinc-700 text-emerald-100 px-3 py-2 text-xs font-mono focus:border-red-500 focus:ring-0 transition" placeholder="Min. 4 chars" />
                </div>
                <div class="pt-2">
                    <button type="submit" class="w-full bg-red-900/20 hover:bg-red-900/40 text-red-400 border border-red-500/50 px-4 py-2 rounded text-xs font-bold uppercase transition">
                        Reset Credentials
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- ROLE INFO -->
    <div class="bg-zinc-900/50 border border-zinc-800 rounded p-4 flex items-center gap-4">
        <div class="text-emerald-500 text-xl"><i class="bi bi-terminal"></i></div>
        <div class="text-xs font-mono">
            <span class="text-zinc-500">SYSTEM_ROLE:</span>
            @if (User.IsInRole("Admin"))
            {
                <span class="text-emerald-400 font-bold">ADMINISTRATOR [ROOT]</span>
            }
            else
            {
                <span class="text-zinc-300">STANDARD_USER</span>
            }
        </div>
    </div>
</div>