@page
@model ChocolateyAppMaker.Pages.Account.LogoutModel
@{
    ViewData["Title"] = "Выход";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center p-5">
                    <div class="mb-4 text-muted">
                        <i class="bi bi-box-arrow-right" style="font-size: 3rem;"></i>
                    </div>
                    <h3 class="mb-3">Выход из системы</h3>
                    <p class="text-muted mb-4">Вы действительно хотите завершить сеанс?</p>

                    <form method="post">
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="bi bi-check-circle"></i> Да, выйти
                            </button>
                            <a asp-page="/Index" class="btn btn-outline-secondary">
                                Отмена
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>