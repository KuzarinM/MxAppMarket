@page "{id:int}"
@model ChocolateyAppMaker.Pages.Store.DetailsModel
@{
    ViewData["Title"] = Model.Profile.Name;
}

<!-- Hero Section -->
<div class="bg-gradient-green text-white mb-5 py-5 shadow-sm">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-auto text-center text-md-start mb-3 mb-md-0">
                <img src="@Model.Profile.DisplayIconUrl"
                     class="rounded-4 shadow-lg bg-white p-1"
                     style="width: 140px; height: 140px; object-fit: contain;"
                     onerror="this.onerror=null; this.src='/images/no-icon.svg';" />
            </div>
            <div class="col-md">
                <h1 class="fw-bold mb-2 display-5">@Model.Profile.Name</h1>
                <p class="opacity-75 mb-3 font-monospace"><small>@Model.Profile.ChocolateyId</small></p>

                <div class="d-flex flex-wrap gap-2 mb-4">
                    @if (!string.IsNullOrEmpty(Model.Profile.Tags))
                    {
                        @foreach (var tag in Model.Profile.Tags.Split(' ').Take(5))
                        {
                            // Полупрозрачные белые бейджи
                            <span class="badge bg-white bg-opacity-25 fw-normal border border-white border-opacity-25">@tag</span>
                        }
                    }
                </div>

                <div class="d-flex gap-3">
                    @if (!string.IsNullOrEmpty(Model.Profile.Homepage))
                    {
                        <a href="@Model.Profile.Homepage" target="_blank" class="btn btn-light btn-sm fw-bold text-success">
                            <i class="bi bi-globe"></i> Официальный сайт
                        </a>
                    }
                </div>
            </div>

            <div class="col-md-auto mt-4 mt-md-0">
                @{
                    var latest = Model.Profile.Installers.OrderByDescending(x => x.Id).FirstOrDefault();
                }
                @if (latest != null)
                {
                    <div class="text-center">
                        <!-- Кнопка: Белая, текст зеленый, большая тень -->
                        <a asp-page-handler="Download" asp-route-fileId="@latest.Id"
                           class="btn btn-light btn-lg px-5 py-3 fw-bold text-success shadow-lg"
                           style="border-radius: 50px;">
                            <i class="bi bi-download me-2"></i> Скачать
                        </a>
                        <div class="mt-2 opacity-75 small">
                            v@(latest.Version) • @latest.Extension.ToUpper()
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <!-- Левая колонка: Описание и Скриншоты -->
        <div class="col-lg-8">

            <!-- Галерея -->
            @if (Model.Profile.Screenshots != null && Model.Profile.Screenshots.Any())
            {
                <div class="card shadow-sm border-0 mb-4 overflow-hidden">
                    <div id="storeCarousel" class="carousel slide bg-dark" data-bs-ride="carousel">
                        <div class="carousel-indicators">
                            @for (int i = 0; i < Model.Profile.Screenshots.Count; i++)
                            {
                                <button type="button" data-bs-target="#storeCarousel" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")"></button>
                            }
                        </div>
                        <div class="carousel-inner">
                            @for (int i = 0; i < Model.Profile.Screenshots.Count; i++)
                            {
                                <div class="carousel-item @(i == 0 ? "active" : "")">
                                    <div class="d-flex justify-content-center align-items-center" style="height: 450px;">
                                        <img src="@Model.Profile.Screenshots[i]" class="d-block" style="max-height: 100%; max-width: 100%; object-fit: contain;">
                                    </div>
                                </div>
                            }
                        </div>
                        @if (Model.Profile.Screenshots.Count > 1)
                        {
                            <button class="carousel-control-prev" type="button" data-bs-target="#storeCarousel" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#storeCarousel" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            </button>
                        }
                    </div>
                </div>
            }

            <!-- Описание -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body p-4">
                    <h5 class="fw-bold mb-3 border-bottom pb-2">О программе</h5>
                    <div class="markdown-content text-secondary">
                        @Html.Raw(Model.DescriptionHtml)
                    </div>
                </div>
            </div>
        </div>

        <!-- Правая колонка: История версий -->
        <div class="col-lg-4">

            @{
                var mainFiles = Model.Profile.Installers.Where(x => !x.IsExtra).OrderByDescending(x => x.Id).ToList();
                var extraFiles = Model.Profile.Installers.Where(x => x.IsExtra).OrderByDescending(x => x.Id).ToList();
            }

            <!-- 1. ОСНОВНЫЕ ВЕРСИИ -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white fw-bold py-3 border-bottom-0">
                    <i class="bi bi-clock-history me-2 text-primary"></i> Версии программы
                </div>
                <div class="list-group list-group-flush">
                    @if (mainFiles.Any())
                    {
                        @foreach (var file in mainFiles)
                        {
                            <div class="list-group-item p-3 border-0 border-top hover-bg-light">
                                <div class="d-flex w-100 justify-content-between align-items-center mb-1">
                                    <span class="fw-bold text-dark fs-5">v @file.Version</span>
                                    <span class="badge bg-light text-secondary border">@file.Extension.ToUpper()</span>
                                </div>

                                <!-- Комментарий -->
                                @if (!string.IsNullOrEmpty(file.Comment))
                                {
                                    <div class="alert alert-light border-0 bg-light text-muted small py-2 px-3 mb-2 rounded-3">
                                        <i class="bi bi-info-circle me-1"></i> @file.Comment
                                    </div>
                                }

                                <div class="d-flex justify-content-between align-items-end mt-2">
                                    <small class="text-muted">@((file.FileSize / 1024.0 / 1024.0).ToString("F2")) MB</small>
                                    <a asp-page-handler="Download" asp-route-fileId="@file.Id" class="btn btn-sm btn-primary rounded-pill px-4 fw-bold shadow-sm">
                                        Скачать
                                    </a>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="p-4 text-center text-muted small">Нет основных версий</div>
                    }
                </div>
            </div>

            <!-- 2. ДОПОЛНИТЕЛЬНЫЕ ФАЙЛЫ (Показываем только если есть) -->
            @if (extraFiles.Any())
            {
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-warning bg-opacity-10 fw-bold py-3 border-bottom-0 text-warning-emphasis">
                        <i class="bi bi-box-seam me-2"></i> Дополнительно / Инструменты
                    </div>
                    <div class="list-group list-group-flush">
                        @foreach (var file in extraFiles)
                        {
                            <div class="list-group-item p-3 border-0 border-top hover-bg-light">
                                <div class="d-flex w-100 justify-content-between align-items-center mb-1">
                                    <span class="fw-bold text-dark">@file.Filename</span>
                                </div>

                                @if (!string.IsNullOrEmpty(file.Comment))
                                {
                                    <div class="text-muted small mb-2">@file.Comment</div>
                                }

                                <div class="d-flex justify-content-between align-items-center mt-2">
                                    <span class="badge bg-white text-muted border">v @file.Version</span>
                                    <a asp-page-handler="Download" asp-route-fileId="@file.Id" class="btn btn-sm btn-outline-dark rounded-pill px-3">
                                        <i class="bi bi-download me-1"></i> Скачать
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .text-pre-wrap {
        white-space: pre-wrap;
    }

    .hover-bg-light:hover {
        background-color: #f8f9fa;
    }

    /* Стили для Markdown контента */
    .markdown-content {
        line-height: 1.6;
        font-size: 0.95rem;
    }

        /* Заголовки внутри описания не должны быть гигантскими */
        .markdown-content h1,
        .markdown-content h2,
        .markdown-content h3 {
            margin-top: 1.5rem;
            margin-bottom: 1rem;
            font-weight: 700;
            color: var(--bs-heading-color);
        }

        .markdown-content h1 {
            font-size: 1.5rem;
        }

        .markdown-content h2 {
            font-size: 1.3rem;
        }

        .markdown-content h3 {
            font-size: 1.1rem;
        }

        /* Списки должны иметь отступы (Bootstrap иногда их убирает) */
        .markdown-content ul,
        .markdown-content ol {
            padding-left: 1.5rem;
            margin-bottom: 1rem;
        }

        /* Ссылки */
        .markdown-content a {
            color: var(--primary-color);
            text-decoration: underline;
        }

        /* Блоки кода */
        .markdown-content pre {
            background-color: #f8f9fa;
            padding: 1rem;
            border-radius: 0.5rem;
            overflow-x: auto;
        }

        /* Картинки внутри описания не должны рвать верстку */
        .markdown-content img {
            max-width: 100%;
            height: auto;
            border-radius: 8px;
            margin: 10px 0;
        }

    /* Темная тема для блоков кода */
    [data-bs-theme="dark"] .markdown-content pre {
        background-color: #2b3035;
        color: #e9ecef;
    }
</style>