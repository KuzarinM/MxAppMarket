@page
@model IndexModel
@{ ViewData["Title"] = "ADMIN_PACKAGES"; }

<div class="space-y-6">
    <div class="flex flex-col md:flex-row justify-between items-center gap-4 border-b border-zinc-800 pb-4">
        <h2 class="text-xl font-bold text-emerald-500 tracking-widest flex items-center gap-2">
            <i class="bi bi-database-gear"></i> PACKAGE_MANAGEMENT
        </h2>
        <div class="flex gap-3 w-full md:w-auto">
             <form method="get" class="flex-1 md:w-80 flex items-center bg-zinc-900 border border-zinc-700 rounded">
                 <input type="text" name="SearchTerm" value="@Model.SearchTerm" placeholder="Find package..." class="bg-transparent border-none text-xs text-zinc-300 w-full focus:ring-0 px-3 py-2" />
                 <button type="submit" class="px-3 text-zinc-500 hover:text-emerald-400"><i class="bi bi-search"></i></button>
             </form>
             <a asp-page="/Scan" class="bg-emerald-900/20 text-emerald-400 border border-emerald-500/50 px-4 py-2 rounded text-xs font-bold uppercase hover:bg-emerald-500 hover:text-black transition flex items-center gap-2">
                 <i class="bi bi-plus-lg"></i> Scan New
             </a>
        </div>
    </div>

    <div class="border border-zinc-800 rounded bg-zinc-900/50 overflow-hidden">
        <table class="w-full text-left text-xs font-mono">
            <thead class="bg-zinc-950 text-zinc-500 uppercase tracking-wider border-b border-zinc-800">
                <tr>
                    <th class="p-4">App Name</th>
                    <th class="p-4 hidden md:table-cell">ID</th>
                    <th class="p-4">Ver</th>
                    <th class="p-4 hidden sm:table-cell">Tags</th>
                    <th class="p-4 text-right">View</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-zinc-800">
                @foreach (var item in Model.Profiles.Items)
                {
                    // Клик по строке ведет в Редактор (Details)
                    <tr class="hover:bg-zinc-800/50 transition group cursor-pointer" onclick="location.href='/Details/@item.Id'">
                        <td class="p-4">
                            <div class="flex items-center gap-3">
                                <!-- Цветной лого без затемнения -->
                                <img src="@item.DisplayIconUrl" class="w-8 h-8 object-contain" onerror="this.src='/images/no-icon.svg'" />
                                <div>
                                    <div class="text-zinc-200 font-bold group-hover:text-emerald-400 transition">@item.Name</div>
                                    <div class="md:hidden text-[9px] text-zinc-500">@item.ChocolateyId</div>
                                </div>
                            </div>
                        </td>
                        <td class="p-4 text-zinc-500 hidden md:table-cell">@(item.ChocolateyId ?? "-")</td>
                        <td class="p-4 text-zinc-400">@item.Installers.Count</td>
                        <td class="p-4 hidden sm:table-cell">
                            <div class="flex gap-1 flex-wrap">
                                @if(!string.IsNullOrEmpty(item.Tags)){
                                    foreach(var t in item.Tags.Split(' ').Take(2)){
                                        <span class="bg-zinc-900 border border-zinc-700 text-zinc-500 px-1.5 rounded-[2px] text-[10px]">@t</span>
                                    }
                                }
                            </div>
                        </td>
                        <td class="p-4 text-right">
                            <!-- Кнопка "Глаз" для перехода в Магазин. stopPropagation нужен, чтобы не сработал клик по строке -->
                            <a href="/Store/Details/@item.Id" onclick="event.stopPropagation()" class="text-zinc-500 hover:text-emerald-400 transition border border-zinc-700 hover:border-emerald-500/50 p-1.5 rounded bg-zinc-950 inline-block" title="View in Store">
                                <i class="bi bi-eye"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        
        @if (Model.Profiles.TotalCount == 0)
        {
            <div class="p-8 text-center text-zinc-600">DATA_EMPTY</div>
        }
    </div>
    
    <!-- Pagination same as before -->
    @if (Model.Profiles.TotalPages > 1)
    {
        <div class="flex justify-center gap-2">
             <a asp-page="./Index" asp-route-p="@(Model.Profiles.PageIndex - 1)" asp-route-SearchTerm="@Model.SearchTerm" class="px-3 py-1 border border-zinc-800 text-zinc-500 text-xs @(!Model.Profiles.HasPreviousPage ? "opacity-30 pointer-events-none" : "")">&lt; PREV</a>
             <span class="px-3 py-1 text-zinc-300 text-xs">@Model.Profiles.PageIndex</span>
             <a asp-page="./Index" asp-route-p="@(Model.Profiles.PageIndex + 1)" asp-route-SearchTerm="@Model.SearchTerm" class="px-3 py-1 border border-zinc-800 text-zinc-500 text-xs @(!Model.Profiles.HasNextPage ? "opacity-30 pointer-events-none" : "")">NEXT &gt;</a>
        </div>
    }
</div>