<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AppStore</title>

    <link rel="icon" type="image/svg+xml" href="~/favicon.svg">

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <!-- Наши стили -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <!-- Убрали bg-primary и navbar-dark, добавили fixed-top для прилипания -->
        <nav class="navbar navbar-expand-lg fixed-top">
            <div class="container">

                <a class="navbar-brand d-flex align-items-center gap-2" asp-area="" asp-page="/Store/Index">
                    <!-- Логотип -->
                    <div class="d-flex align-items-center justify-content-center shadow-lg"
                         style="width: 40px; height: 40px;
                background: linear-gradient(135deg, #34d399 0%, #059669 100%);
                border-radius: 12px;
                color: white;">
                        <i class="bi bi-box-seam-fill" style="font-size: 20px;"></i>
                    </div>
                    <!-- Текст -->
                    <span style="font-weight: 800; letter-spacing: -0.5px; font-size: 1.35rem;">
                        Mx<span class="text-primary">Store</span>
                    </span>
                </a>


                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Store/Index">Каталог</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">Администрирование</a>
                                <ul class="dropdown-menu border-0 shadow-lg rounded-4 mt-2">
                                    <li><a class="dropdown-item py-2" asp-page="/Index"><i class="bi bi-list-ul me-2"></i>Пакеты</a></li>
                                    <li><a class="dropdown-item py-2" asp-page="/Scan"><i class="bi bi-search me-2"></i>Сканирование</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item py-2" asp-page="/Admin/Users"><i class="bi bi-people me-2"></i>Пользователи</a></li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav ms-auto align-items-center">
                        <li class="nav-item me-2">
                            <button class="btn nav-link py-2 px-3" onclick="toggleTheme()" title="Переключить тему">
                                <i id="theme-icon" class="bi bi-moon-stars-fill"></i>
                            </button>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" data-bs-toggle="dropdown">
                                    <div class="bg-success bg-opacity-10 text-success rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px;">
                                        <i class="bi bi-person-fill"></i>
                                    </div>
                                    @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end border-0 shadow-lg rounded-4 mt-2">
                                    <li><a class="dropdown-item py-2" asp-page="/Account/Profile">Профиль</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form method="post" asp-page="/Account/Logout">
                                            <button class="dropdown-item text-danger py-2">Выход</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-primary btn-sm px-4" asp-page="/Account/Login">Войти</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Отступ сверху, так как навбар теперь fixed-top -->
    <div style="padding-top: 80px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top py-4 mt-5 bg-body-tertiary">
        <div class="container text-center">
            <div class="d-flex justify-content-center align-items-center gap-3 flex-wrap">
                <!-- Копирайт -->
                <span class="text-secondary small">
                    &copy; @DateTime.Now.Year <strong>MxStore</strong>.
                    <span class="opacity-75">Created with <i class="bi bi-heart-fill text-danger mx-1" style="font-size: 0.7rem;"></i> & AI</span>
                </span>

                <!-- Разделитель -->
                <span class="text-muted opacity-25 d-none d-sm-inline">|</span>

                <!-- Ссылка на GitHub -->
                <a href="https://github.com/KuzarinM/MxAppMarket" target="_blank" class="link-secondary text-decoration-none small transition-base hover-link">
                    <i class="bi bi-github me-1"></i> Source Code
                </a>

            </div>
        </div>
    </footer>

    <!-- JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>

<script>
    const storedTheme = localStorage.getItem('theme');
    const themeToApply = storedTheme || 'dark';
    document.documentElement.setAttribute('data-bs-theme', themeToApply);
</script>


</html>