@page
@model ChocolateyAppMaker.Pages.Account.LoginModel
@{
    ViewData["Title"] = "AUTH_REQUIRED";
    Layout = null;
}
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>AUTH - MxStore</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: { colors: { zinc: { 950: '#09090b', 900: '#18181b' }, emerald: { 500: '#10b981' } } }
            }
        }
    </script>
    <style>
        body {
            background-color: #09090b;
            color: #f4f4f5;
            font-family: monospace;
            background-image: radial-gradient(#18181b 1px, transparent 1px);
            background-size: 20px 20px;
        }
    </style>
</head>
<body class="flex items-center justify-center min-h-screen p-4">

    <div class="w-full max-w-md bg-zinc-900 border border-emerald-500/30 rounded shadow-[0_0_30px_rgba(16,185,129,0.1)] overflow-hidden">

        <!-- Header -->
        <div class="flex items-center justify-between p-3 border-b border-zinc-800 bg-zinc-950">
            <h2 class="text-emerald-500 font-bold tracking-widest flex items-center gap-2 text-sm">
                <span class="animate-pulse">_</span>ACCESS_CONTROL
            </h2>
            <span class="text-zinc-600 text-xs">[SECURE]</span>
        </div>

        <div class="p-8">
            <div class="mb-6 text-center">
                <div class="inline-flex items-center justify-center w-16 h-16 rounded border border-zinc-700 bg-zinc-950 mb-4 text-emerald-500">
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" viewBox="0 0 16 16">
                        <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2z" />
                    </svg>
                </div>
                <h1 class="text-xl font-bold tracking-wider text-zinc-200">AUTHENTICATE</h1>
            </div>

            <form method="post" class="space-y-4">
                <div asp-validation-summary="ModelOnly" class="text-red-500 text-xs border border-red-900/50 bg-red-900/10 p-2 text-center"></div>

                <div>
                    <label class="block text-zinc-500 text-[10px] uppercase tracking-widest mb-1">Username</label>
                    <input asp-for="Input.UserName" class="w-full bg-zinc-950 border border-zinc-700 text-emerald-100 px-3 py-2 focus:outline-none focus:border-emerald-500 transition text-sm" placeholder="root" autofocus />
                    <span asp-validation-for="Input.UserName" class="text-red-500 text-[10px]"></span>
                </div>

                <div>
                    <label class="block text-zinc-500 text-[10px] uppercase tracking-widest mb-1">Password</label>
                    <input asp-for="Input.Password" type="password" class="w-full bg-zinc-950 border border-zinc-700 text-emerald-100 px-3 py-2 focus:outline-none focus:border-emerald-500 transition text-sm" placeholder="••••••" />
                    <span asp-validation-for="Input.Password" class="text-red-500 text-[10px]"></span>
                </div>

                <button type="submit" class="w-full mt-4 bg-emerald-900/20 border border-emerald-500/50 text-emerald-400 hover:bg-emerald-500 hover:text-black py-2 transition text-xs font-bold uppercase tracking-wider">
                    [ INITIALIZE_SESSION ]
                </button>
            </form>
        </div>

        <div class="p-3 border-t border-zinc-800 bg-zinc-950 text-center">
            <a href="/" class="text-zinc-600 hover:text-zinc-400 text-[10px] uppercase transition">← Return to Public Access</a>
        </div>
    </div>

</body>
</html>