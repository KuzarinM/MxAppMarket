@page
@model ChocolateyAppMaker.Pages.Admin.UsersModel
@{ ViewData["Title"] = "Пользователи"; }

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold"><i class="bi bi-people-fill text-primary"></i> Пользователи</h2>
        <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#createUserModal">
            <i class="bi bi-person-plus-fill me-2"></i> Добавить пользователя
        </button>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">Логин</th>
                            <th>Роль</th>
                            <th>Статус</th>
                            <th class="text-end pe-4">Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Users)
                        {
                            <tr>
                                <td class="ps-4 fw-bold">@user.UserName</td>
                                <td>
                                    @if (user.IsAdmin)
                                    {
                                        <span class="badge bg-primary"><i class="bi bi-shield-lock me-1"></i> Admin</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary"><i class="bi bi-person me-1"></i> User</span>
                                    }
                                </td>
                                <td>
                                    @if (user.IsLocked)
                                    {
                                        <span class="badge bg-danger">Заблокирован</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Активен</span>
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    @if (user.UserName != User.Identity.Name)
                                    {
                                        <!-- Кнопка Редактировать (Открывает модалку) -->
                                        <!-- Передаем данные через data- атрибуты -->
                                        <button class="btn btn-sm btn-outline-primary me-1" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#editUserModal"
                                                data-userid="@user.Id"
                                                data-username="@user.UserName"
                                                data-isadmin="@user.IsAdmin.ToString().ToLower()"
                                                data-islocked="@user.IsLocked.ToString().ToLower()"
                                                onclick="setupEditModal(this)">
                                            <i class="bi bi-pencil"></i>
                                        </button>

                                        <!-- Кнопка Удалить -->
                                        <form method="post" asp-page-handler="Delete" asp-route-id="@user.Id" class="d-inline" 
                                              onsubmit="return confirm('Вы уверены, что хотите удалить пользователя @user.UserName?');">
                                            <button class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <span class="text-muted small fst-italic">Текущий аккаунт</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- 1. МОДАЛКА СОЗДАНИЯ -->
<div class="modal fade" id="createUserModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title"><i class="bi bi-person-plus"></i> Новый пользователь</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" asp-page-handler="Create">
                <div class="modal-body">
                    @if (!ModelState.IsValid)
                    {
                        <div class="alert alert-danger small">
                            <div asp-validation-summary="All" class="mb-0"></div>
                        </div>
                    }
                    <div class="mb-3">
                        <label class="form-label fw-bold">Логин</label>
                        <input asp-for="NewUser.UserName" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Пароль</label>
                        <input asp-for="NewUser.Password" type="password" class="form-control" required />
                    </div>
                    <div class="form-check">
                        <input asp-for="NewUser.IsAdmin" class="form-check-input" type="checkbox" id="createIsAdmin" />
                        <label class="form-check-label" for="createIsAdmin">
                            Права администратора
                        </label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                    <button type="submit" class="btn btn-success">Создать</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- 2. МОДАЛКА РЕДАКТИРОВАНИЯ -->
<div class="modal fade" id="editUserModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title"><i class="bi bi-pencil-square"></i> Редактирование: <span id="editUserNameDisplay"></span></h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" asp-page-handler="Edit">
                <input type="hidden" asp-for="EditUser.Id" id="editUserId" />
                
                <div class="modal-body">
                    <!-- Роль -->
                    <div class="card mb-3 bg-light border-0">
                        <div class="card-body">
                            <h6 class="card-title fw-bold mb-2">Роль в системе</h6>
                            <div class="form-check form-switch">
                                <input asp-for="EditUser.IsAdmin" class="form-check-input" type="checkbox" id="editIsAdmin" />
                                <label class="form-check-label" for="editIsAdmin">
                                    Является администратором
                                </label>
                            </div>
                        </div>
                    </div>

                    <!-- Блокировка -->
                    <div class="card border-danger">
                        <div class="card-body">
                            <h6 class="card-title fw-bold text-danger mb-2">Блокировка доступа</h6>
                            <div class="form-check form-switch">
                                <input asp-for="EditUser.IsLocked" class="form-check-input" type="checkbox" id="editIsLocked" />
                                <label class="form-check-label" for="editIsLocked">
                                    Учетная запись заблокирована
                                </label>
                            </div>
                            <div class="form-text text-muted small">
                                Заблокированный пользователь не сможет войти в систему.
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                    <button type="submit" class="btn btn-primary">Сохранить изменения</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<script>
    // Функция для передачи данных из кнопки в модалку
    function setupEditModal(button) {
        // Читаем data-атрибуты нажатой кнопки
        const id = button.getAttribute('data-userid');
        const name = button.getAttribute('data-username');
        const isAdmin = button.getAttribute('data-isadmin') === 'true';
        const isLocked = button.getAttribute('data-islocked') === 'true';

        // Заполняем поля в модалке
        document.getElementById('editUserId').value = id;
        document.getElementById('editUserNameDisplay').textContent = name;
        document.getElementById('editIsAdmin').checked = isAdmin;
        document.getElementById('editIsLocked').checked = isLocked;
    }

    document.addEventListener("DOMContentLoaded", function() {
        // Если сервер сказал, что была ошибка при создании
        @if (ViewData["ShowCreateModal"] as bool? == true)
        {
            <text>
            var myModal = new bootstrap.Modal(document.getElementById('createUserModal'));
            myModal.show();
            </text>
        }
    });
</script>
}